<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".RegisterPage">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/profile_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBeginHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ubuntu"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="130dp"
        android:layout_height="121dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@drawable/loginregister_logo"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBeginHeader" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="128dp"
        android:layout_height="103dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBeginHeader"
        app:srcCompat="@drawable/rvm_logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="353dp"
        android:layout_height="390dp"
        android:layout_gravity="top|center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="110dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <ScrollView
            android:layout_width="345dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterName"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/profile_placeholder"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="Enter Name"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/edtRegisterSurname"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:layout_gravity="top|center_horizontal"
                    android:drawableLeft="@drawable/profile_placeholder"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="Enter Surname"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/edtRegisterEmail"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:layout_gravity="top|center_horizontal"
                    android:drawableLeft="@drawable/baseline_email"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="Enter Email"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/edtRegisterPassword"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:layout_gravity="top|center_horizontal"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="Enter Password"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/edtRegisterConfirmPassword"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:layout_gravity="top|center_horizontal"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="text"
                    android:paddingLeft="20dp" />



            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.232"
        app:srcCompat="@drawable/loginbutton_bg" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_gravity="top|center_horizontal"
        android:clickable="true"
        android:fontFamily="@font/nunito_sans"
        android:gravity="center"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.246" />
</androidx.constraintlayout.widget.ConstraintLayout>