<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ProfileFragment" >


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_gravity="top|center"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/baseline_camera" />

    <TextView
        android:id="@+id/txtName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/londrina_solid"
        android:text="Rushil"
        android:textSize="34sp" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="195dp"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/txtSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/londrina_solid"
            android:text="Surname:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtSurname"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/roundstyle"
            android:drawableLeft="@drawable/baseline_personicon"
            android:drawableRight="@drawable/baseline_edit"
            android:drawablePadding="30dp"
            android:ems="10"
            android:fontFamily="@font/londrina_solid"
            android:inputType="text"
            android:padding="10dp"
            android:text="Mahatho"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/londrina_solid"
            android:text="Email:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="135dp"
            android:background="@drawable/roundstyle"
            android:drawableLeft="@drawable/baseline_email"
            android:drawableRight="@drawable/baseline_edit"
            android:drawablePadding="30dp"
            android:ems="10"
            android:fontFamily="@font/londrina_solid"
            android:inputType="text"
            android:padding="10dp"
            android:text="rushilmahato@gmail.com"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/londrina_solid"
            android:text="Password:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="220dp"
            android:background="@drawable/roundstyle"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableRight="@drawable/baseline_edit"
            android:drawablePadding="30dp"
            android:ems="10"
            android:fontFamily="@font/londrina_solid"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="mahato123"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/londrina_solid"
            android:text="Gender:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtGender"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="300dp"
            android:background="@drawable/roundstyle"
            android:drawableLeft="@drawable/baseline_personicon"
            android:drawableRight="@drawable/baseline_edit"
            android:drawablePadding="30dp"
            android:ems="10"
            android:fontFamily="@font/londrina_solid"
            android:inputType="text"
            android:padding="10dp"
            android:text="FEMALE"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="259dp"
            android:layout_height="62dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="380dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/londrina_solid"
            android:text="Logout"
            android:textColor="#454545"
            android:textSize="34sp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="129dp"
        android:layout_height="111dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="45dp"
        android:src="@drawable/baseline_personicon" />

</FrameLayout>