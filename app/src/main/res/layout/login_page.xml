<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginPage">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="348dp"
        android:layout_height="286dp"
        android:layout_gravity="top|center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="196dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <EditText
            android:id="@+id/edtLoginEmail"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:drawableLeft="@drawable/baseline_email"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="text"
            android:paddingLeft="20dp" />


        <EditText
            android:id="@+id/edtLoginPassword"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:clickable="true"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/loginbutton_bg" />

        <TextView
            android:id="@+id/txtBegin"
            android:layout_width="137dp"
            android:layout_height="54dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="200dp"
            android:clickable="true"
            android:fontFamily="@font/nunito_sans"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="49dp"
        android:src="@drawable/profile_circle"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBeginHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/ubuntu"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="130dp"
        android:layout_height="121dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/loginregister_logo"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginBottom="558dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBeginHeader"
        app:srcCompat="@drawable/rvm_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>